#include<stdio.h>
#include<conio.h>
#include<string.h>
int main()
{
	int b;
	printf("1. New word-- Enter 1 \n2. Exit-- Enter 0");
	j:
	scanf("%d",&b);
	if(b!=0 && b!=1){
		printf("Wrong choice");
		goto j;
	}
	else{
		while(b){
			int i=0,x;
			char a[100],j;
			printf("Enter Word");
			gets(a);
			x=strlen(a);
			if(a[x-1]=='a'||a[x-1]=='e'||a[x-1]=='i'||a[x-1]=='o'||a[x-1]=='u'){ 
				j=a[i];
			for(i=0;i<x;i++){
				a[i]=a[i+1];
			}
			a[x-1]=j;
			}
			else
				j=a[i];
				for(i=0;i<x;i++)
					a[i]=a[i+1];
				a[x-1]=j;
			printf("Be");
			puts(a);
    		}
			
		}
	getch();
	return 0;
}
